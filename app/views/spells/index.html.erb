<h1>Spells</h1>
<p>
<%= link_to 'Create New', new_spell_path %> |
<%= link_to "Home", root_path %>    
</p>
<table>
  <thead>
    <tr>
		<th>Level</th>
        <th><%= link_to 'Spellname', spells_path(order_by: 'title') %></th>
		<th>School name</th>
		<th>Classes</th>
		<th>Concentration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.level %></td>
        <td><%= link_to spell.title, spell %></td>
        <td><%= spell.school.name %></td>
		<td>
		<% spell.spellclasses.each do |spellclasses| %>
			<%= spellclasses.name %>, 
		<% end %>
		</td>
		<td><%= spell.isConcentration %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
        <td><%= link_to 'Add to Book', add_to_book_path(spell) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
